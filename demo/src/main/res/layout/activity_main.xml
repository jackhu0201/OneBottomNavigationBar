<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:orientation="vertical"
    tools:context="cn.onestravel.one.navigation.demo.MainActivity">

    <FrameLayout
        android:id="@+id/mainFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        ></FrameLayout>


    <cn.onestravel.one.navigation.androidx.OneBottomNavigationBar
        android:id="@+id/oneBottomLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_navigation"
        app:oneFloatingEnable="true"
        app:oneFloatingUp="20dp"
        app:oneFloatingPadding="3dp"
        app:oneItemPadding="3dp"
        app:oneItemTextTopMargin="5dp"
        app:oneMenu="@menu/navigation_menu"
        app:oneItemTopLineColor="#cccccc"
        />



</LinearLayout>